<h1>Your Cart</h1>

<% if @cart.empty? %>
    <p>Your Cart is Currently Empty</p>
<% else %>
    <%= link_to 'Empty your Cart', cart_clear_path %>
<% end %>
<br><br><br>

<% total = 0 %>

<ul>
<% @cart.each do | id, quantity | %>
    <% peice = Peice.find_by_id(id) %>

    <li>
        <%= link_to peice.title, peice %>
        <p><%= peice.description %></p>
        <p><%= number_to_currency(peice.price, :unit => '$') %></p>
        <p>Quantity: <%= quantity %></p>
    </li>
    <% total += quantity * peice.price %>
<% end %>

<p><b><%= number_to_currency(total, :unit => '$') %></b></p>
</ul>
